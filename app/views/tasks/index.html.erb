<h1>Tasks#index</h1>
<% @tasks.each do |task| %>
  <%= link_to task.name, task_path(task) %>
  <%= link_to "Edit", edit_task_path(task) %>
  <%= link_to "New Task", new_task_path %>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
